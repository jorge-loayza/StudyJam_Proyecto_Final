<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_cardView"
    android:layout_marginLeft="@dimen/margin_cardView"
    android:layout_marginRight="@dimen/margin_cardView"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImagenTarjeta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvOrganizacionTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="organizacion"
                    android:padding="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCargoTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cargo"
                    android:paddingBottom="5dp"
                    android:paddingLeft="25dp"
                    android:textSize="@dimen/normal_text"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivBorrarTarjeta"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_red_600_24dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>