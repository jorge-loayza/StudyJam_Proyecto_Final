<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivImagenTarjeta"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_btn"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:id="@+id/llDatosContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:text="Nombre:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/normal_text"
                                    android:textStyle="bold"
                                    android:background="@drawable/contorno_text_view"
                                    android:padding="5dp" />
                                <TextView
                                    android:id="@+id/tvNom"
                                    android:text="Cargo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/normal_text"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:text="Correo:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/normal_text"
                                    android:textStyle="bold"
                                    android:background="@drawable/contorno_text_view"
                                    android:padding="5dp"/>
                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:text="Cargo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/normal_text"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivImgUsuario"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/icon_user"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:text="Telefono:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/normal_text"
                            android:textStyle="bold"
                            android:background="@drawable/contorno_text_view"
                            android:padding="5dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tvTel"
                                android:text="Cargo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/normal_text"
                                android:layout_gravity="center_vertical"/>
                            <ImageView
                                android:id="@+id/ivIcLlamar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_call_black"
                                android:padding="10dp"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/colorDivider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"></View>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="Cargo:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvCargo"
                        android:text="Cargo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="PÃ¡gina Web:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvPaginaweb"
                        android:text="pagina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="DescripcÃ³n:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvDescripcion"
                        android:text="decripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/normal_text"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="DirecciÃ³n:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvDireccion"
                        android:text="direccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="Localidad:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvLocalidad"
                        android:text="localdad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:text="OrganizaciÃ³n:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:textStyle="bold"
                        android:background="@drawable/contorno_text_view"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/tvOrganizacion"
                        android:text="organizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnEditarTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Editar Tarjeta"
                android:textColor="@color/colorText"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
